<div class="container">
  <h1><%= @topic.title %></h1>
  <div class="row">
    <div class="col-md-8">
      <% @topic.bookmarks.each do |bookmark| %>
      <div class="media">
        <div class="media-body">
          <h4 class="media-heading">
            <%= link_to bookmark.url, topic_bookmark_path(@topic, bookmark) %>
          </h4>
        </div>
      </div>
      <% end %>
    </div>

    <div class="col-md-4">
      <%= link_to "New Bookmark", new_topic_bookmark_path(@topic), class: 'btn btn-success' %>
      <%= link_to "Edit Topic", edit_topic_path(@topic), class: 'btn btn-warning' %>
      <%= link_to "Delete Topic", @topic, method: :delete, class: 'btn btn-danger' %>
    </div>
  </div>
</div>
