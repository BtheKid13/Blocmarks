<div class="container">
  <h1>BlocMark Topics</h1>

  <div class="row">
    <div class="col-md-8">
      <% @topics.each do |topic| %>
      <div class="media">
        <div class="media-body">
          <h4 class="media-heading">
            <%= link_to topic.title, topic %>
          </h4>
        </div>
      </div>
      <% end %>
    </div>
    <div class="col-md-4">
      <%= link_to "New Topic", new_topic_path(@topic), class: "btn btn-success" %>
    </div>
  </div>
</div>

<% content_for :analytic do %>
  <script type="text/javascript"> $(document).ready(function(){ blocmetrics.report("Topic Index Visit"); }); </script>
<% end %>
