<div class="container">
  <div class="row">
    <div class="col-md-8">
      <h1><%= @bookmark.url %></h1>
    </div>
    <div class="col-md-4">
      <%= render partial: 'likes/like', locals: { bookmark: @bookmark } %>
      <%= link_to "Edit Bookmark", edit_topic_bookmark_path(@bookmark.topic, @bookmark), class: 'btn btn-warning' %>
      <%= link_to "Delete Bookmark", [@bookmark.topic, @bookmark], method: :delete, class: 'btn btn-danger' %>
    </div>
  </div>
</div>
